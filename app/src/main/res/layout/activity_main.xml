<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Metodo de Ordenamiento Burbuja"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:layout_margin="50dp"
        />

    <EditText
        android:id="@+id/etValorA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor A"
        android:textSize="20sp"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/etValorB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor B"
        android:textSize="20sp"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/etValorC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor C"
        android:textSize="20sp"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/etValorD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor D"
        android:textSize="20sp"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/etValorE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor E"
        android:textSize="20sp"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/btnOrdenarMenorMayor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ORDENAR DE MENOR A MAYOR"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/btnOrdenarMayorMenor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ORDENAR DE MAYOR A MENOR"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado: "
        android:textAlignment="center"
        />

</LinearLayout>